<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinasoft.mapper.StudentMapper">

	<!-- 多对一关联 嵌套查询 -->
	<resultMap type="Student" id="studentOneAll">
		<association property="gender" column="c_id"
			javaType="Gender" select="selectGenderByC_id"></association>
	</resultMap>
	<select id="selectOneAll" resultMap="studentOneAll"
		parameterType="int">
		select * from student where id = #{id}
	</select>
	<select id="selectGenderByC_id" resultType="Gender"
		parameterType="int">
		select * from gender where id = #{c_id}
	</select>


	

</mapper>